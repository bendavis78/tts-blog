<div class="container">
  <div class="section">
    <p id="notice"><%= notice %></p>

    <h1 class="header center text-lighten-2">Listing Blog Posts</h1>



    <div class="section">
      <% @blog_posts.each do |blog_post| %>
      <div class="card">
        <div class="card-content">
          <div class="card-title"><%= blog_post.title %></div>
          <div><em><small><%= blog_post.user.email %></small></em></div>
          <p><%= blog_post.blog_entry %></p>
        </div>
        <div class="card-action">
        <%= link_to 'Show', blog_post %>
        <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
        <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>


    <br>

    <%= link_to 'New Blog post', new_blog_post_path, {:class=>"btn"} %>
  </div>
</div>
